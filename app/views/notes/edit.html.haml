%h2 Edit mode!
= simple_form_for(:note, :url => note_path(@note.id),:html => { :method => :put }) do |f|
  = f.error_notification
  .form-inputs
    .well{:style => "background-color: #FFFCB6"}
      .note-field= f.input :text, :autofocus => true, :value => @note.text, :label => false, :as => :note
  %button.btn.btn-info.btn-large{:name => "commit", :type => "submit"}
    %i.icon-edit.icon-white
    Save edit
  .btn.btn-danger.btn-large= link_to(raw("<div style='color: white;'><i class='icon-trash icon-white'></i> Delete</div>"), note_path(@note), :method => :delete, :data => { :confirm => 'Do you want to delete the note?' })