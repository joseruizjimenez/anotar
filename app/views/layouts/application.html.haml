!!! 5
%html
  %head
    %meta{:charset => "utf-8"}
    %meta{"http-equiv" => "X-UA-Compatible", :content => "IE=edge,chrome=1"}
    %meta{:name => "viewport", :content => "width=device-width, initial-scale=1.0"}
    %title Anotar | Take notes
    %meta{:name => "description", :content => "Take notes, that's it"}
    %meta{:name => "author", :content => "Jose Ruiz Jimenez"}

    -# = stylesheet_link_tag    "application", :media => "all"
    -# = javascript_include_tag "application"
    = render 'layouts/boostrap_css_files'
    = csrf_meta_tags

    -# HTML5 IE6-8 support elements plus a conditional speed hack
    /[if IE]
    /[if lt IE 9]
      %script{:src => "http://html5shim.googlecode.com/svn/trunk/html5.js"}

    = render 'layouts/app_icons'

  %body
    -# Navigation top bar (bootstrap)
    %header.navbar.navbar-fixed-top
      %nav.navbar-inner
        .container
          = render 'layouts/navigation'

    -# Main body container (bootstrap)
    #main{:role => "main"}
      .container
        .content
          .row
            .span12
              = = render 'layouts/messages'
              = yield

          %footer

    = render 'layouts/boostrap_js_files'
    = render 'layouts/analytics'