%a.btn.btn-navbar{:'data-toggle' => "collapse", :'data-target' => ".nav-collapse"}
  %span.icon-bar
  %span.icon-bar
  %span.icon-bar
%a.brand{:href => root_path}
  %i.icon-pencil.icon-white
  Anotar!
.nav-collapse
  %ul.nav
    %li.active= link_to 'Home', root_path
    %li= link_to 'About', '#about'
    %li= link_to 'Contact', '#contact'
  %ul.nav.pull-right
    - if user_signed_in?
      %li
        %div
          %a.btn.btn-success{:href => edit_user_registration_path}
            %i.icon-cog.icon-white
            Settings
      %li
        %div
          .btn.btn-danger= link_to(raw("<div style='color: white;'><i class='icon-off icon-white'></i> Logout</div>"), destroy_user_session_path, :method => :delete)
    - else
      %li
        %div
          %a.btn.btn-success{:href => new_user_session_path}
            %i.icon-user.icon-white
            Login
      %li
        %div
          %a.btn.btn-info{:href => new_user_registration_path}
            %i.icon-flag.icon-white
            Sign up